keywords = {AVIRIS,Canopy structure,LiDAR,Random forest,Structural types},
pages = {208--226},
publisher = {Elsevier Inc.},
title = {{Canopy structural attributes derived from AVIRIS imaging spectroscopy data in a mixed broadleaf/conifer forest}},
