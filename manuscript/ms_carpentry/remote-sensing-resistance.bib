doi = {10.1111/j.1466-8238.2008.00429.x},
file = {:Users/mikoontz/dev/bibliography/Papers/Virah-Sawmy, Willis, Gillson{\_}2009{\_}Global Ecology and Biogeography{\_}Threshold response of Madagascar's littoral forest to sea-level rise.pdf:pdf},
isbn = {1466-822X},
