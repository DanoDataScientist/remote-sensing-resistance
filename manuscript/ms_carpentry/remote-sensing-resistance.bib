doi = {10.1016/j.rse.2011.11.004},
file = {:Users/mikoontz/dev/bibliography/Papers/Culbert et al.{\_}2012{\_}Remote Sensing of Environment{\_}Modeling broad-scale patterns of avian species richness across the Midwestern United S.pdf:pdf},
