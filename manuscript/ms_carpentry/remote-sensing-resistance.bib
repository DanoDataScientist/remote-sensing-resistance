isbn = {0921-2973},
issn = {15729761},
journal = {Landscape Ecology},
keywords = {Burn severity,Conifer forest,Disturbance,Heterogeneity,Patch size,RdNBR (relative differenced normalized burn ratio),Spatial configuration,Structural equation modeling,Wildfire},
number = {10},
