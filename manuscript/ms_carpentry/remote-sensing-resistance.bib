file = {:Users/mikoontz/dev/bibliography/Papers/Huesca et al.{\_}2016{\_}Remote Sensing of Environment{\_}Canopy structural attributes derived from AVIRIS imaging spectroscopy data in a mixed b.pdf:pdf},
issn = {00344257},
