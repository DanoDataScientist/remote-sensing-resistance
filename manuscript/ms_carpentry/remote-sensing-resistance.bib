file = {:Users/mikoontz/dev/bibliography/Papers/Parks et al.{\_}2018{\_}Environmental Research Letters{\_}High-severity fire Evaluating its key drivers and mapping its probability across wester.pdf:pdf},
isbn = {0661246272},
