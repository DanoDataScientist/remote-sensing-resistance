journal = {Forest Ecology and Management},
keywords = {Burn severity,Ecological restoration,Fire ecology,Landsat,Random Forest,RdNBR,Remote sensing,Wildland Fire Use},
number = {11},
pages = {2399--2406},
title = {{A predictive model of burn severity based on 20-year satellite-inferred burn severity data in a large southwestern US wilderness area}},
volume = {258},
year = {2009}
