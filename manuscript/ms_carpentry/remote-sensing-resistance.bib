file = {:Users/mikoontz/dev/bibliography/Papers/Parks, Dillon, Miller{\_}2014{\_}Remote Sensing{\_}A new metric for quantifying burn severity The relativized burn ratio.pdf:pdf},
isbn = {2072-4292},
issn = {20724292},
journal = {Remote Sensing},
keywords = {Burn severity,DNBR,RBR,RdNBR},
number = {3},
pages = {1827--1844},
title = {{A new metric for quantifying burn severity: The relativized burn ratio}},
volume = {6},
year = {2014}
}
