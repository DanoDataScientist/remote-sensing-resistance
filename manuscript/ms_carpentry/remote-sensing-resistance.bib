journal = {Remote Sensing of Environment},
keywords = {Biodiversity,Birds,Habitat structure,Landsat,Multiple linear regression,NLCD,Species richness,Texture},
pages = {140--150},
title = {{Modeling broad-scale patterns of avian species richness across the Midwestern United States with measures of satellite image texture}},
